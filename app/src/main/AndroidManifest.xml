<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.carpoolbuddy">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CarpoolBuddy">
        <activity
            android:name=".Controller.Sign_up"
            android:exported="false" />
        <activity
            android:name=".Controller.UserProfileActivity"
            android:exported="false" />
        <activity
            android:name=".Controller.VehicleInfoActivity"
            android:exported="false" />
        <activity
            android:name=".Controller.VehicleProfileActivity"
            android:exported="false" />
        <activity
            android:name=".Controller.AddVehicleActivity"
            android:exported="false" />
        <activity
            android:name=".Controller.AuthActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>